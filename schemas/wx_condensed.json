{
    "allOf": [
        {
            "$ref": "base.json"
        }
    ],
    "properties": {
        "features": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "properties": {
                        "type": "object",
                        "properties": {
                            "data": {
                                "title": "Data associated with each data source specified in FeatureCollection",
                                "type": "object",
                                "minItems": 1,
                                "patternProperties": {
                                    "^.*$": {
                                        "$ref": "#/$defs/source_data"
                                    }
                                },
                                "additionalProperties": false
                            }
                        }
                    }
                }
            }
        }
    },
    "$defs": {
        "values": {
            "title": "Values for a single index over time",
            "oneOf": [
                {
                    "title": "Index not present for this source",
                    "type": "null"
                },
                {
                    "title": "Values for index at this position over time",
                    "type": "array",
                    "items": {
                        "type": "number"
                    },
                    "minItems": 1
                }
            ],
            "additionalProperties": false
        },
        "member_data": {
            "title": "Values for all indices defined in FeatureCollection for a member of a source",
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/$defs/values"
            },
            "additionalProperties": false
        },
        "source_data": {
            "title": "Data for all members of a given source, for a certain Feature",
            "type": "array",
            "items": {
                "$ref": "#/$defs/member_data"
            },
            "minItems": 1
        }
    }
}