{
    "allOf": [
        {
            "$ref": "https://geojson.org/schema/FeatureCollection.json"
        }
    ],
    "required": [
        "indices",
        "sources"
    ],
    "properties": {
        "features": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "properties": {
                        "type": "object",
                        "required": [
                            "data"
                        ],
                        "properties": {
                            "name": {
                                "title": "Name associated with this Feature (e.g. weather station name)",
                                "type": "string"
                            },
                            "data": {
                                "title": "Data associated with each data source specified in FeatureCollection",
                                "type": "object",
                                "minItems": 1,
                                "patternProperties": {
                                    "^.*$": {
                                        "$ref": "#/$defs/source_data"
                                    }
                                },
                                "additionalProperties": false
                            }
                        }
                    }
                }
            }
        },
        "indices": {
            "title": "Types of values that each member of each source of each Feature will contain",
            "type": "object",
            "minItems": 1,
            "patternProperties": {
                "^.*$": {
                    "$ref": "#/$defs/index"
                }
            },
            "additionalProperties": false
        },
        "sources": {
            "title": "Sources of data that each Feature will contain",
            "type": "object",
            "minItems": 1,
            "patternProperties": {
                "^.*$": {
                    "$ref": "#/$defs/source"
                }
            },
            "additionalProperties": false
        },
        "additionalProperties": false
    },
    "$defs": {
        "index": {
            "title": "A type of value that is present for all members of all sources in this FeatureCollection",
            "type": "object",
            "required": [
                "name",
                "units",
                "height"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "units": {
                    "type": "string"
                },
                "height": {
                    "type": "string"
                },
                "note": {
                    "type": "string"
                }
            }
        },
        "source": {
            "title": "A data source that provides at least one member containing value for all indices",
            "type": "object",
            "required": [
                "time"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "time": {
                    "type": "object",
                    "required": [
                        "units",
                        "since",
                        "values"
                    ],
                    "properties": {
                        "units": {
                            "type": "string"
                        },
                        "since": {
                            "type": "string",
                            "format": "datetime"
                        },
                        "values": {
                            "title": "Times represented by each array of values in the Feature data",
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "type": "number"
                            }
                        }
                    }
                },
                "members": {
                    "title": "Names for data source members, in the order they appear in Feature data",
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "values": {
            "title": "Values for a single index over time",
            "type": "array",
            "items": {
                "type": "number"
            },
            "minItems": 1
        },
        "member_data": {
            "title": "Values for indices defined in FeatureCollection for a member of a source that are present in this source",
            "type": "object",
            "minItems": 1,
            "patternProperties": {
                "^.*$": {
                    "$ref": "#/$defs/values"
                }
            },
            "additionalProperties": false
        },
        "source_data": {
            "title": "Data for all members of a given source, for a certain Feature",
            "oneOf": [
                {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/member_data"
                    }
                },
                {
                    "type": "object",
                    "patternProperties": {
                        "^.*$": {
                            "$ref": "#/$defs/member_data"
                        }
                    },
                    "additionalProperties": false
                }
            ],
            "minItems": 1
        }
    }
}